# modifiers
set $alt Mod1
set $win Mod2

# font
font pango:monospace 8

# copied from : https://github.com/Airblader/dotfiles-manjaro/blob/master/.i3/config
# colors
set_from_resource $darkred     color1  #000000
set_from_resource $red         color9  #000000
set_from_resource $darkgreen   color2  #000000
set_from_resource $green       color10 #000000
set_from_resource $darkyellow  color3  #000000
set_from_resource $yellow      color11 #000000
set_from_resource $darkblue    color4  #000000
set_from_resource $blue        color12 #000000
set_from_resource $darkmagenta color5  #000000
set_from_resource $magenta     color13 #000000
set_from_resource $darkcyan    color6  #000000
set_from_resource $cyan        color14 #000000
set_from_resource $darkwhite   color7  #000000
set_from_resource $white       color15 #000000

# Current colorscheme in .Xresources
set_from_resource $cs-darker        cs-darker
set_from_resource $cs-dark          cs-dark
set_from_resource $cs-light         cs-light
set_from_resource $cs-sec-accent    cs-sec-accent
set_from_resource $cs-pri-accent    cs-pri-accent
#
# for_window [class="^.*"] border pixel 0

# Window borders
new_window 1pixel
smart_borders on
gaps inner 5
gaps outer 5

# window colors
#                       border              background         text                 indicator
client.focused          $cs-darker          $cs-darker         $cs-light            #00ff00
client.unfocused        $cs-darker          $cs-darker         $cs-dark             #00ff00
client.focused_inactive $cs-darker          $cs-darker         $cs-dark             #00ff00
client.urgent           $cs-pri-accent      $cs-pri-accent     $cs-light            #00ff00

# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $up     j
set $down   k
set $left   h
set $right  l

# Use Mouse+$alt to drag floating windows to their wanted position
floating_modifier $alt

# start a terminal
bindsym $alt+Return exec i3-sensible-terminal

# kill focused window
bindsym $alt+Shift+q kill

# start dmenu (a program launcher)
bindsym $alt+d exec rofi -show run -width 1680 -fg "$cs-pri-accent" -bg "$cs-darker" -hlfg "$cs-darker" -hlbg "$cs-pri-accent" -bc "$cs-darker" -location 0 -lines 15 -bw 0 -font "MonacoB 16" -padding 300 -separator-style none -opacity 80

# change focus
bindsym $alt+$up    focus up
bindsym $alt+$down  focus down
bindsym $alt+$left  focus left
bindsym $alt+$right focus right

# alternatively, you can use the cursor keys:
bindsym $alt+Up    focus up
bindsym $alt+Down  focus down
bindsym $alt+Left  focus left
bindsym $alt+Right focus right

# move focused window
bindsym $alt+Shift+$up    move up
bindsym $alt+Shift+$down  move down
bindsym $alt+Shift+$left  move left
bindsym $alt+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym $alt+Shift+Left   move left
bindsym $alt+Shift+Down   move down
bindsym $alt+Shift+Up     move up
bindsym $alt+Shift+Right  move right

# split in horizontal orientation
bindsym $alt+Shift+v split h

# split in vertical orientation
bindsym $alt+v split v

# enter fullscreen mode for the focused container
bindsym $alt+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $alt+s layout stacking
bindsym $alt+w layout tabbed
bindsym $alt+e layout toggle split

# toggle tiling / floating
bindsym $alt+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $alt+space focus mode_toggle

# focus the parent container
bindsym $alt+a focus parent

# focus the child container
bindsym $alt+Shift+a focus child

# name workspaces
set $workspace0 "0 ZERO"
set $workspace1 "1 ONE"
set $workspace2 "2 TWO"
set $workspace3 "3 THREE"
set $workspace4 "4 FOUR"
set $workspace5 "5 FIVE"
set $workspace6 "6 SIX"
set $workspace7 "7 SEVEN"
set $workspace8 "8 EIGHT"
set $workspace9 "9 NINE"

# switch to workspace
bindsym $alt+0 workspace $workspace0
bindsym $alt+1 workspace $workspace1
bindsym $alt+2 workspace $workspace2
bindsym $alt+3 workspace $workspace3
bindsym $alt+4 workspace $workspace4
bindsym $alt+5 workspace $workspace5
bindsym $alt+6 workspace $workspace6
bindsym $alt+7 workspace $workspace7
bindsym $alt+8 workspace $workspace8
bindsym $alt+9 workspace $workspace9

# move focused container to workspace
bindsym $alt+Shift+0 move container to workspace $workspace0
bindsym $alt+Shift+1 move container to workspace $workspace1
bindsym $alt+Shift+2 move container to workspace $workspace2
bindsym $alt+Shift+3 move container to workspace $workspace3
bindsym $alt+Shift+4 move container to workspace $workspace4
bindsym $alt+Shift+5 move container to workspace $workspace5
bindsym $alt+Shift+6 move container to workspace $workspace6
bindsym $alt+Shift+7 move container to workspace $workspace7
bindsym $alt+Shift+8 move container to workspace $workspace8
bindsym $alt+Shift+9 move container to workspace $workspace9

# moving workspaces
bindsym $alt+Shift+o move workspace to output left
bindsym $alt+Shift+p move workspace to output right

# volume
bindsym $alt+F12 exec "amixer -D pulse sset Master 5%+"
bindsym $alt+F11 exec "amixer -D pulse sset Master 5%-"
bindsym $alt+F10 exec "amixer -D pulse set Master 1+ toggle"

# volume with special buttons
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master 5%+"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master 5%-"
bindsym XF86AudioMute        exec "amixer -D pulse set Master 1+ toggle"

# reload the configuration file
bindsym $alt+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $alt+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $alt+Shift+e exec "i3-nagbar -t warning -m 'Hackerman, Ãªtes-vous vraiment certain de vouloir quitter?' -b 'QUITTER LE HACKING-STATION' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym $up    resize grow   height 10 px or 10 ppt
        bindsym $down  resize shrink height 10 px or 10 ppt
        bindsym $right resize grow   width  10 px or 10 ppt
        bindsym $left  resize shrink width  10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Up    resize grow   height 10 px or 10 ppt
        bindsym Down  resize shrink height 10 px or 10 ppt
        bindsym Right resize grow   width  10 px or 10 ppt
        bindsym Left  resize shrink width  10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $alt+r mode "resize"

# bar
bar {
	status_command i3blocks -c ~/.config/i3blocks/i3blocks.conf
	position top
	font pango:monospace 8

	colors {
	  background $cs-darker
	  separator  $cs-dark
	  #                  border             background         text
	  focused_workspace  $cs-darker         $cs-darker         $cs-light
	  inactive_workspace $cs-darker         $cs-darker         $cs-dark
	  urgent_workspace   $cs-pri-accent     $cs-pri-accent     $cs-light
	}
}

# bindsym $alt+shift+x exec /home/fabien/.bin/scripts/lock.sh
bindsym $alt+shift+x exec gnome-screensaver-command -l

# Sreen brightness controls
bindsym XF86MonBrightnessUp   exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Touchpad controls
# bindsym XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay  exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext  exec playerctl next
bindsym XF86AudioPrev  exec playerctl previous

# AudioPulse changer
bindsym $alt+Shift+i exec /home/fabien/.i3/pulseaudiochanger.sh

# Auto open
exec xrdb ~/.config/.Xresources
exec compton -f
exec /home/fabien/.pia_manager/pia_manager/run.sh > /dev/null 2>&1 &
exec_always feh --bg-scale /home/fabien/Images/wallpapers/by_burned-simon_stalenhag.jpg
